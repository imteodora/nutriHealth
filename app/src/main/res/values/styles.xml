<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimationUpAndUp">
        <item name="android:windowEnterAnimation">@anim/activity_slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/activity_slide_out_up</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_height">60dp</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogAnimationUpToDown">
        <item name="android:windowEnterAnimation">@anim/activity_slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/activity_slide_out_down</item>
    </style>



</resources>
